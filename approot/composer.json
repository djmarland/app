{
    "require": {
        "php": "5.6.*",
        "silex/silex": "*@stable",
        "solution10/config": "~1.0",
        "twig/twig": "~1.8",
        "monolog/monolog": "~1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "squizlabs/php_codesniffer": "~1.5.3"
    },

    "autoload": {
        "psr-4": {
            "APP\\": "app/src/APP"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "APP\\Tests\\": "app/tests/APP"
        }
    }
}
