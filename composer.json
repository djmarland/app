{
    "require": {
        "php": "5.5.*",
        "silex/silex": "*@stable",
        "twig/twig": "~1.8",
        "opensoft/rollout": "~1.0",
        "doctrine/common": "~2.0",
        "monolog/monolog": "~1.0",
        "solution10/config": "~1.0",
        "doctrine/dbal": "2.2.*"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "squizlabs/php_codesniffer": "~1.5.3",
        "symfony/browser-kit": ">=2.3,<2.4-dev",
        "symfony/css-selector": ">=2.3,<2.4-dev"
    },

    "autoload": {
        "psr-4": {
            "APP\\": "app/src/APP"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "APP\\Tests\\": "app/tests/APP"
        }
    }
}
